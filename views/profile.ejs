<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="bg-gray-100 text-gray-800">
    <main class="flex justify-between relative">
        <!-- Sidebar -->
<!-- Sidebar -->
<nav class="<%= currentRoute === 'profile' ? 'w-[5%]' : 'w-[17%]' %> h-screen sticky top-0 bg-white drop-shadow-xl transition-all duration-300">

    <!-- Profile Section (conditionally hidden on profile page) -->
    <% if (currentRoute !== 'profile') { %>
        <div class="w-full h-[25%] flex justify-end items-center flex-col gap-6">
            <div>
                <div class="w-20 h-20 bg-red-300 rounded-full">
                    <img src="" alt="Profile Picture">
                </div>
                <h1 class="text-center text-lg font-semibold mt-3">Name</h1>
                <h3 class="text-center opacity-80">username</h3>
            </div>
            <div class="flex gap-10">
                <div class="flex flex-col items-center">
                    <h3 class="font-bold">20</h3>
                    <a href="#" class="text-gray-600">Posts</a>
                </div>
                <div class="flex flex-col items-center">
                    <h3 class="font-bold">1M</h3>
                    <a href="#" class="text-gray-600">Followers</a>
                </div>
                <div class="flex flex-col items-center">
                    <h3 class="font-bold">200</h3>
                    <a href="#" class="text-gray-600">Following</a>
                </div>
            </div>
        </div>
        <br><br>
        <hr />
    <% } %>

    <!-- Menu (Icons for Profile Page, Full Menu for Other Pages) -->
    <div class="w-full h-[26%] mt-8">
        <ul class="flex flex-col gap-4 font-semibold ml-4">
            <li class="mt-3">
                <a href="/dashboard" class="flex items-center gap-3 text-gray-700 hover:text-blue-500">
                    <i class="fas fa-rss"></i>
                    <% if (currentRoute !== 'profile') { %>
                        <span>Feeds</span>
                    <% } %>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center gap-3 text-gray-700 hover:text-blue-500">
                    <i class="fas fa-bell"></i>
                    <% if (currentRoute !== 'profile') { %>
                        <span>Notifications</span>
                    <% } %>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center gap-3 text-gray-700 hover:text-blue-500">
                    <i class="fas fa-envelope"></i>
                    <% if (currentRoute !== 'profile') { %>
                        <span>Messages</span>
                    <% } %>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center gap-3 text-gray-700 hover:text-blue-500">
                    <i class="fas fa-heart"></i>
                    <% if (currentRoute !== 'profile') { %>
                        <span>My Favourites</span>
                    <% } %>
                </a>
            </li>
            <li>
                <a href="/profile" class="flex items-center gap-3 text-gray-700 hover:text-blue-500">
                    <i class="fas fa-user"></i>
                    <% if (currentRoute !== 'profile') { %>
                        <span>Profile</span>
                    <% } %>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center gap-3 text-gray-700 hover:text-blue-500">
                    <i class="fas fa-cog"></i>
                    <% if (currentRoute !== 'profile') { %>
                        <span>Setting</span>
                    <% } %>
                </a>
            </li>
        </ul>
    </div>

    <br><br>
    <hr />

    <!-- Friends Section -->
    <% if (currentRoute !== 'profile') { %>
    <div class="w-full rounded-lg p-4 py-2 mt-6">
        <h1 class="text-lg font-semibold mb-4">Friends</h1>

        <!-- Contact 1 -->
        <div class="flex items-center justify-between bg-white p-3 rounded-md shadow-md">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-sky-400 rounded-full overflow-hidden">
                    <img src="https://via.placeholder.com/150" alt="Profile Image" class="object-cover w-full h-full">
                </div>
                <div>
                    <h2 class="text-md font-semibold">Name</h2>
                    <h3 class="text-sm text-gray-500">username</h3>
                </div>
            </div>
            <div class="text-blue-500 cursor-pointer">
                <i class="fa-regular fa-comment"></i>
            </div>
        </div>

        <!-- Contact 2 -->
        <div class="flex items-center justify-between bg-white p-3 rounded-md shadow-md mt-4">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-sky-400 rounded-full overflow-hidden">
                    <img src="https://via.placeholder.com/150" alt="Profile Image" class="object-cover w-full h-full">
                </div>
                <div>
                    <h2 class="text-md font-semibold">Name</h2>
                    <h3 class="text-sm text-gray-500">username</h3>
                </div>
            </div>
            <div class="text-blue-500 cursor-pointer">
                <i class="fa-regular fa-comment"></i>
            </div>
        </div>

        <div class="mt-6 text-center">
            <a href="#" class="text-blue-600 hover:underline font-semibold">View All</a>
        </div>
    </div>
    <% } %>

</nav>


    </main>
</body>

</html>