<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .profile-header {
            background-image: url('https://via.placeholder.com/1200x400');
            background-size: cover;
            background-position: center;
            height: 200px;
        }
        .profile-pic {
            background-image: url('https://via.placeholder.com/150');
            background-size: cover;
            background-position: center;
            border-radius: 50%;
            width: 150px;
            height: 150px;
            border: 5px solid white;
            position: absolute;
            top: 120px;
            left: 20px;
        }
        .story-highlights img {
            width: 75px;
            height: 75px;
        }
        .post-grid img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-800">

    <!-- Profile Header -->
    <header class="relative">
        <div class="profile-header"></div>
        <div class="profile-pic absolute top-32 left-8 border-4 border-white"></div>
    </header>

    <!-- Profile Content -->
    <div class="container mx-auto mt-32 px-4 lg:px-8">
        <div class="flex items-center">
            <div class="flex-grow">
                <h1 class="text-3xl font-bold">John Doe</h1>
                <p class="text-gray-600 mt-1">Web Developer | Tech Enthusiast | Blogger</p>
            </div>
            <div>
                <button class="bg-blue-500 text-white px-6 py-2 rounded-lg shadow hover:bg-blue-600">Follow</button>
                <button class="bg-gray-200 text-gray-800 px-6 py-2 rounded-lg shadow ml-4">Message</button>
            </div>
        </div>

        <!-- Story Highlights -->
        <div class="mt-8">
            <h2 class="text-xl font-semibold mb-4">Highlights</h2>
            <div class="flex space-x-4 overflow-x-auto">
                <div class="flex-shrink-0">
                    <img src="https://via.placeholder.com/75" alt="Highlight 1" class="rounded-full border-2 border-white shadow">
                </div>
                <div class="flex-shrink-0">
                    <img src="https://via.placeholder.com/75" alt="Highlight 2" class="rounded-full border-2 border-white shadow">
                </div>
                <div class="flex-shrink-0">
                    <img src="https://via.placeholder.com/75" alt="Highlight 3" class="rounded-full border-2 border-white shadow">
                </div>
                <!-- More highlights as needed -->
            </div>
        </div>

        <!-- Posts Grid -->
        <div class="mt-8">
            <h2 class="text-xl font-semibold mb-4">Posts</h2>
            <div class="grid grid-cols-3 gap-2">
                <div class="relative">
                    <img src="https://via.placeholder.com/300" alt="Post 1" class="rounded-lg shadow">
                </div>
                <div class="relative">
                    <img src="https://via.placeholder.com/300" alt="Post 2" class="rounded-lg shadow">
                </div>
                <div class="relative">
                    <img src="https://via.placeholder.com/300" alt="Post 3" class="rounded-lg shadow">
                </div>
                <div class="relative">
                    <img src="https://via.placeholder.com/300" alt="Post 4" class="rounded-lg shadow">
                </div>
                <!-- More posts as needed -->
            </div>
        </div>

        <!-- User Stats -->
        <div class="mt-8 flex justify-between">
            <div class="text-center">
                <span class="text-2xl font-semibold block">120</span>
                <span class="text-gray-600">Posts</span>
            </div>
            <div class="text-center">
                <span class="text-2xl font-semibold block">1.2k</span>
                <span class="text-gray-600">Followers</span>
            </div>
            <div class="text-center">
                <span class="text-2xl font-semibold block">300</span>
                <span class="text-gray-600">Following</span>
            </div>
        </div>
    </div>

</body>
</html>
